<h1>Update Details</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: users_admin_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

       <%= f.label :start_date %>
      <%= f.date_field :start_date, class: 'form-control' %>

      <%= f.label :end_date %>
      <%= f.date_field :end_date, class: 'form-control' %>


      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :phone_no %>
      <%= f.text_field :phone_no, class: 'form-control' %>

       <%= f.label :designation %>
      <%= f.text_field :designation, class: 'form-control' %>

      <%= f.label :starting_salary %>
      <%= f.number_field :starting_salary, class: 'form-control' %>
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control' %>

      <%= f.label :billable %>
      <%= f.check_box :billable, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
  <% end %>
</div>




